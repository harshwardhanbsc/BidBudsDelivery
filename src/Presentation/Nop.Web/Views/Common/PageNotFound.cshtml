@{
    Layout = "~/Views/Shared/_ColumnsOne.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.PageNotFound").Text);
    //page class
    Html.AppendPageCssClassParts("html-not-found-page");
}
<div class="header-section">
    <img src="~/Themes/BigBudsTheme/Content/images/slide1.jpg" />
    <div class="headerbox">
        <h2>@T("PageTitle.PageNotFound")</h2>
    </div>
</div>
<div class="main-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="page not-found-page">
                    <div class="page-title">
                        <h1>@T("PageTitle.PageNotFound")</h1>
                    </div>
                    <div class="page-body">
                        @Html.Action("TopicBlock", "Topic", new {systemName = "PageNotFound"})
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>